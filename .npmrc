# Save exact versions instead of ^ or ~ (no surprise upgrades)
save-exact=true

# Use lockfile strictly (ensures reproducible installs)
package-lock=true

# Auto-generate package-lock.json on install
lockfile-version=3

# Always prefer local binaries (from ./node_modules/.bin)
scripts-prepend-node-path=true

# Optional: Faster installs
prefer-offline=true
progress=false

# Security
audit=true
fund=false
