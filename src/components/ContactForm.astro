<form 
  name="contact" 
  method="POST" 
  data-netlify="true" 
  netlify-honeypot="bot-field" 
  class="space-y-8"
>
  <!-- Netlify form handling -->
  <input type="hidden" name="form-name" value="contact" />
  <p class="hidden"><label>Donâ€™t fill this out: <input name="bot-field" /></label></p>

  <!-- Name -->
  <div>
    <label for="name" class="block text-base font-semibold mb-2">Name</label>
    <input 
      type="text" 
      name="name" 
      id="name" 
      required
      class="w-full px-6 py-3 rounded-2xl border border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
    />
  </div>

  <!-- Email -->
  <div>
    <label for="email" class="block text-base font-semibold mb-2">Email</label>
    <input 
      type="email" 
      name="email" 
      id="email" 
      required
      class="w-full px-6 py-3 rounded-2xl border border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
    />
  </div>

  <!-- Phone -->
  <div>
    <label for="phone" class="block text-base font-semibold mb-2">Phone</label>
    <input 
      type="tel" 
      name="phone" 
      id="phone" 
      placeholder="9876543210" 
      pattern="[0-9]{10}" 
      required
      class="w-full px-6 py-3 rounded-2xl border border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
    />
  </div>

  <!-- Message -->
  <div>
    <label for="message" class="block text-base font-semibold mb-2">Message</label>
    <textarea 
      name="message" 
      id="message" 
      rows="5" 
      required
      class="w-full px-6 py-3 rounded-2xl border border-gray-300 dark:border-gray-700 bg-gray-50 dark:bg-gray-900 shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 transition"
    ></textarea>
  </div>

  <!-- Button -->
  <button 
    type="submit" 
    class="w-full bg-blue-600 text-white font-semibold text-lg px-8 py-3 rounded-2xl shadow-md hover:shadow-xl hover:bg-blue-700 transform hover:scale-[1.02] active:scale-[0.98] transition"
  >
    Send Message
  </button>
</form>
