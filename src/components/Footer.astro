---
import { getEntry } from "astro:content";

const siteInfo = await getEntry("site", "info")!;
const { footer_address, footer_phone, footer_email } = siteInfo.data;
---

<footer class="bg-gray-900 text-gray-300 py-12 mt-20">
  <div class="max-w-7xl mx-auto px-6 grid md:grid-cols-3 gap-12">
    
    <!-- About -->
    <div>
      <h3 class="text-xl font-semibold text-white mb-4">Sree Balaji Constructions</h3>
      <p class="text-sm leading-relaxed text-gray-400">
        Building durable and modern homes tailored for village life.  
        Trusted by families for quality, affordability, and reliability.
      </p>
    </div>

    <!-- Quick Links -->
    <div>
      <h3 class="text-xl font-semibold text-white mb-4">Quick Links</h3>
      <ul class="space-y-2 text-sm">
        <li><a href="/" class="hover:text-blue-400 transition">Home</a></li>
        <li><a href="/services" class="hover:text-blue-400 transition">Services</a></li>
        <li><a href="/projects" class="hover:text-blue-400 transition">Projects</a></li>
        <li><a href="/contact" class="hover:text-blue-400 transition">Contact</a></li>
      </ul>
    </div>

    <!-- Contact -->
    <div>
      <h3 class="text-xl font-semibold text-white mb-4">Contact Us</h3>
      <ul class="space-y-2 text-sm text-gray-400">
        <li>📍 {footer_address}</li>
        <li>📞 {footer_phone}</li>
        <li>✉️ {footer_email}</li>
    </div>
  </div>
      </ul>
    </div>
  </div>

  <div class="border-t border-gray-800 text-center text-sm text-gray-500 mt-10 pt-6">
    © {new Date().getFullYear()} Sree Balaji Constructions. All rights reserved.
  </div>
</footer>
