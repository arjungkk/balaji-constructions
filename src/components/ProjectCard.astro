---
interface Props {
  title: string;
  image?: string;
  description: string;
  href: string; // new prop for link
}

const { title, image, description, href } = Astro.props;
---

<a href={href} class="block bg-white rounded-xl shadow-md hover:shadow-xl transition overflow-hidden">
  <img src={image} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p class="text-gray-600 text-sm mb-4">{description}</p>
    <span class="text-blue-600 font-semibold hover:underline">View Project â†’</span>
  </div>
</a>