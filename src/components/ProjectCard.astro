---
interface Props {
  title: string;
  image?: string;
  description: string;
  href: string;
}
const { title, image, description, href } = Astro.props;
---

<a href={href} class="block bg-white dark:bg-gray-800 rounded-2xl shadow-md hover:shadow-xl transition hover:scale-[1.02] overflow-hidden">
  {image && <img src={image} alt={title} class="w-full h-48 object-cover" />}
  <div class="p-6">
    <h3 class="text-xl font-semibold mb-2">{title}</h3>
    <p class="text-gray-600 dark:text-gray-400 text-sm mb-4">{description}</p>
    <span class="text-blue-600 dark:text-blue-400 font-medium hover:underline">View Project â†’</span>
  </div>
</a>
