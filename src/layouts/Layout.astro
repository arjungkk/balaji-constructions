---
const { title } = Astro.props;
---

<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>
      {title ? `${title} | Sree Balaji Constructions` : "Sree Balaji Constructions"}
    </title>

    <!-- Google Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

    <script>
      (function () {
        var h = window.location.hash || "";
        if (h.includes("invite_token=") || h.includes("recovery_token=")) {
          // Send the user to /admin with the same hash so the widget handles it there.
          // Using replace() avoids an extra history entry.
          window.location.replace("/admin/" + h);
        }
      })();
    </script>

    <!-- Netlify Identity Widget -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <script>
      if (window.netlifyIdentity) {
        // Initialize widget so it can handle invite/reset links
        window.netlifyIdentity.init({
          APIUrl: window.location.origin + "/.netlify/identity",
        });

        window.netlifyIdentity.on("init", (user) => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
  </head>
  <body class="bg-white text-gray-900 dark:bg-gray-900 dark:text-gray-100 font-[Inter] transition-colors duration-300">
    <slot />
  </body>
</html>
