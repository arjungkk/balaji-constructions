---
const { title } = Astro.props;
---
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title ? title + " | Sree Balaji Constructions" : "Sree Balaji Constructions"}</title>

    <script>
      (function () {
        var h = window.location.hash || "";
        if (h.includes("invite_token=") || h.includes("recovery_token=")) {
          // Send the user to /admin with the same hash so the widget handles it there.
          // Using replace() avoids an extra history entry.
          window.location.replace("/admin/" + h);
        }
      })();
    </script>

    <!-- Netlify Identity Widget -->
    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
    <script>
      if (window.netlifyIdentity) {
        // Initialize widget so it can handle invite/reset links
        window.netlifyIdentity.init({
          APIUrl: "https://sreebalajiconstructions.netlify.app/.netlify/identity",
        });

        window.netlifyIdentity.on("init", (user) => {
          if (!user) {
            window.netlifyIdentity.on("login", () => {
              document.location.href = "/admin/";
            });
          }
        });
      }
    </script>
  </head>
  <body class="bg-gray-50 text-gray-900">
    <slot />
  </body>
</html>
