---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ServiceCard from "../components/ServiceCard.astro";
import ProjectCard from "../components/ProjectCard.astro";
import ContactForm from "../components/ContactForm.astro";
import { getCollection, type CollectionEntry } from "astro:content";

type Project = CollectionEntry<"projects">;
type Service = CollectionEntry<"services">;

let projects: Project[] = await getCollection("projects");
let services: Service[] = await getCollection("services");

// Show only latest 3 projects
projects = projects.slice(0, 3);
---

<Layout title="Home">
  <Header />

  <!-- Hero Section -->
  <section class="text-center py-24 bg-gradient-to-r from-cyan-500 via-blue-600 to-purple-700 text-white dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 transition-colors">
    <h1 class="text-5xl md:text-6xl font-extrabold mb-6">Building Quality Homes for Villages</h1>
    <p class="text-lg md:text-xl opacity-90">Affordable. Reliable. Modern design.</p>
    <a 
      href="/contact" 
      class="mt-8 inline-block bg-white text-blue-700 font-semibold px-8 py-3 rounded-xl shadow-lg hover:scale-105 transition dark:bg-gray-800 dark:text-gray-200"
    >
      Get a Quote
    </a>
  </section>

  <!-- Services Section -->
  <section id="services" class="py-20 px-6 max-w-6xl mx-auto">
    <h2 class="text-3xl font-bold text-center mb-12 text-gray-800 dark:text-gray-100">Our Services</h2>
    <div class="grid md:grid-cols-3 gap-8">
      {services.map((service) => (
        <ServiceCard
          title={service.data.title}
          description={service.data.description}
        />
      ))}
    </div>
  </section>

  <!-- Projects Section -->
  <section id="projects" class="py-20 px-6 bg-gray-100 dark:bg-gray-900 transition-colors">
    <h2 class="text-3xl font-bold text-center mb-12 text-gray-800 dark:text-gray-100">Our Projects</h2>
    <div class="grid md:grid-cols-3 gap-8 mb-12">
      {projects.map((project) => (
        <ProjectCard
          title={project.data.title}
          image={project.data.image}
          description={project.data.description}
          href={`/projects/${project.slug}`}
        />
      ))}
    </div>

    <!-- View All Projects button -->
    <div class="text-center">
      <a 
        href="/projects" 
        class="inline-block bg-blue-600 text-white px-8 py-3 rounded-xl shadow-lg font-semibold hover:bg-blue-700 transition dark:bg-blue-500 dark:hover:bg-blue-600"
      >
        View All Projects
      </a>
    </div>
  </section>

  <!-- Contact Section -->
  <section id="contact" class="py-20 px-6">
    <h2 class="text-3xl font-bold text-center mb-12 text-gray-800 dark:text-gray-100">Get in Touch</h2>
    <div class="max-w-2xl mx-auto">
      <ContactForm />
    </div>
  </section>

  <Footer />
</Layout>
