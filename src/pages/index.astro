	---
	import Layout from "../layouts/Layout.astro";
	import Header from "../components/Header.astro";
	import Footer from "../components/Footer.astro";
	import ServiceCard from "../components/ServiceCard.astro";
	import ProjectCard from "../components/ProjectCard.astro";
	import ContactForm from "../components/ContactForm.astro";
	import { getCollection, type CollectionEntry } from "astro:content";

	type Project = CollectionEntry<"projects">;
	const projects: Project[] = await getCollection("projects");
	---

	<Layout title="Home">
	<Header />

	<section class="text-center py-20 bg-gradient-to-r from-cyan-500 via-blue-600 to-purple-700 text-white">
		<h1 class="text-5xl font-extrabold mb-4">Building Quality Homes for Villages</h1>
		<p class="text-lg">Affordable. Reliable. Modern design.</p>
		<a href="/contact" class="mt-6 inline-block bg-white text-blue-700 font-semibold px-6 py-3 rounded-xl shadow-lg hover:scale-105 transition">Get a Quote</a>
	</section>

	<section class="py-16 px-6 max-w-6xl mx-auto">
		<h2 class="text-3xl font-bold text-center mb-10">Our Services</h2>
		<div class="grid md:grid-cols-3 gap-8">
		<ServiceCard title="House Construction" description="We build durable and modern homes tailored to village life." />
		<ServiceCard title="Renovations" description="Give your old house a new life with our expert renovation services." />
		<ServiceCard title="Design Assistance" description="We help design homes that blend tradition with modern aesthetics." />
		</div>
	</section>

	<section class="py-16 px-6 bg-gray-100">
		<h2 class="text-3xl font-bold text-center mb-10">Our Projects</h2>
		<div class="grid md:grid-cols-3 gap-8">
			{projects.map(project => (
				<ProjectCard
					title={project.data.title}
					image={project.data.image}
					description={project.data.description}
				/>
				))}
		</div>
	</section>

	<section class="py-16 px-6">
		<h2 class="text-3xl font-bold text-center mb-10">Get in Touch</h2>
		<div class="max-w-2xl mx-auto">
		<ContactForm />
		</div>
	</section>

	<Footer />
	</Layout>