---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { getCollection, type CollectionEntry } from "astro:content";

type Project = CollectionEntry<"projects">;

// ðŸ‘‡ This function tells Astro which project slugs to generate
export async function getStaticPaths() {
  const projects = await getCollection("projects");
  return projects.map((project) => ({
    params: { slug: project.slug },
    props: { project },
  }));
}

// ðŸ‘‡ Receive the project from props
const { project } = Astro.props;
---

<Layout title={project.data.title}>
  <Header />

  <main class="max-w-4xl mx-auto px-6 py-16">
    <h1 class="text-4xl font-bold mb-6">{project.data.title}</h1>
    <img src={project.data.image} alt={project.data.title} class="rounded-xl shadow-lg mb-6" />
    <p class="text-lg text-gray-700 mb-6">{project.data.description}</p>

    <article class="prose lg:prose-xl">
      {project.body} <!-- Render the Markdown body -->
    </article>

    <div class="mt-12">
      <a href="/projects" class="text-blue-600 hover:underline">&larr; Back to all projects</a>
    </div>
  </main>

  <Footer />
</Layout>
